<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height_size"
    android:layout_marginTop="@dimen/list_margin_top"
    android:paddingBottom="?listPreferredItemPaddingRight"
    android:paddingLeft="?listPreferredItemPaddingLeft">

    <LinearLayout
        android:id="@+id/llFirstChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/llSecondChild"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="title"
            android:singleLine="true"
            android:textAppearance="?android:title"
            android:textColor="@color/note_title"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/tvGist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="desc"
            android:singleLine="true"
            android:textAppearance="?android:title"
            android:textColor="@color/note_gist"
            android:textSize="@dimen/text_size_gist" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="date"
            android:textAppearance="?android:title"
            android:textColor="@color/note_gist"
            android:textSize="@dimen/text_size_date" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSecondChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="@dimen/star_icon_size"
            android:layout_height="@dimen/star_icon_size"
            android:contentDescription="@string/star_icon"
            android:paddingRight="2dp"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/ivFavourite"
            android:layout_width="@dimen/star_icon_size"
            android:layout_height="@dimen/star_icon_size"
            android:contentDescription="@string/star_favourite"
            android:paddingLeft="2dp"
            android:src="@drawable/ic_favorite" />
    </LinearLayout>


</RelativeLayout>
